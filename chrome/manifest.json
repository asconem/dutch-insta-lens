{
  "manifest_version": 3,
  "name": "Dutch Insta-Lens",
  "short_name": "Insta-Lens",
  "version": "1.3.0",
  "description": "Translate Dutch text on Instagram posts using OCR and DeepL.",
  "permissions": [],
  "host_permissions": [
    "https://*.instagram.com/*",
    "https://*.cdninstagram.com/*",
    "https://*.fbcdn.net/*",
    "https://api.ocr.space/*",
    "https://translate.googleapis.com/*",
    "https://api-free.deepl.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
